@model HikePals.Web.ViewModels.Events.CreateEventInputViewModel

    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">
    </head>

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">

    <div class="flex-wrap">
        <div class="row-md-6">
            <div class="form-group">
                <label asp-for="@Model.Title">Name</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="LocationName">Point of Interest / Destination name</label>
                <input asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>

            <div class="row-md-6">
                <div class="form-group">
                    <label asp-for="Details">Details</label>
                    <textarea asp-for="Details" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Distance">Distance (km)</label>
                    <input asp-for="Distance" class="form-control" />
                    <span asp-validation-for="Distance" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Duration">Approximate duration (hours)</label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <div class='input-group date' >
                    <input id="startTimePicker" asp-for="StartTime" type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <div class="input-group date" >
                    <input id="endTimePicker" asp-for="EndTime" type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxGroupSize">Group Size</label>
                <input asp-for="MaxGroupSize" class="form-control">
                <span asp-validation-for="MaxGroupSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TransportId">Transport</label>
                <select asp-for="TransportId" class="form-control" asp-items="Model.TransportItems" class="custom-select">
                    <option value="">Choose main transport</option>
                </select>
                <span asp-validation-for="TransportId" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="TripId" />

        </div>
    </div>
    <input type="submit" value="Submit" class="btn-block" />

</form>

@section Scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>

    <script>
        $(function () {
            $('#startTimePicker, #endTimePicker').datetimepicker();
        });
    </script>
}