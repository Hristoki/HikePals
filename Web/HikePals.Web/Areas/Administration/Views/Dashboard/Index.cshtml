@model HikePals.Web.ViewModels.Administration.Dashboard.DashboardIndexViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
}

<h1>@this.ViewData["Title"]</h1>
<hr class=""/>
<div class="row d-md-flex">
    <div class="col-md-4">
        <span class="row">
            Events count: @Model.EventsCount
        </span>

        <span class="row">
            <a type="button" class="btn btn-success" asp-area="Administration" asp-controller="Events" asp-action="Index">Events Manager</a>
        </span>
    </div>

    <div class="col-md-4 class="text-center"">

        <span class="row">
            Trips count: @Model.TripsCount
        </span class="row">

        <span class="row">
            <a type="button" class="btn btn-success" asp-area="Administration" asp-controller="Trips" asp-action="Index">Trips Manager</a>
        </span>

    </div>

    <div class="col-md-4">

        <span class="row">
            Users count: @Model.UsersCount
        </span>

        <span class="row">
            <a type="button" class="btn btn-success" asp-area="Administration" asp-controller="Users" asp-action="Index">Users Manager</a>
        </span>
    </div>
</div>

