@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">

             <div class="form-group">
                 <label asp-for="Input.Name">Name</label>
                 <input asp-for="Input.Name" class="form-control" value="" />
                 <span asp-validation-for="Input.Name" class="text-danger"></span>
             </div>

                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <div class="form-group">
                    <label asp-for="Input.DateOfBirth">Date of Birth</label>
                    <input type="date" asp-for="Input.DateOfBirth" class="form-control" value="@DateTime.Now"/>
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label asp-for="Input.CityId">City</label>
                <select asp-for="Input.CityId" class="form-control" asp-items="Model.CityItems" class="custom-select">
                    <option value="">Choose City</option>
                </select>
                <span asp-validation-for="Input.CityId" class="text-danger"></span>
            </div>


            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
